# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-supabase-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# NextAuth Configuration (if using NextAuth for additional auth)
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/visatrack_malta

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@visatrackmalta.com

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_RATE_LIMIT=100

# File Storage
MAX_UPLOAD_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_NAME=VisaTrack Malta
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Logging
LOG_LEVEL=debug

# Error Tracking (Sentry)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# Feature Flags
FEATURE_ENABLE_AI=false
FEATURE_ENABLE_MOBILE_APP=false
FEATURE_ENABLE_INTEGRATIONS=false
